<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Garage 2.5</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Garage 2.5", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Tjänster<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @*<li><a href="~-/Members/Index">Medlemmar</a></li>*@
                                <li>@Html.ActionLink("Medlemmar", "Index", "Members")</li>
                                <li>@Html.ActionLink("Fordonsöversikt", "Index", "Vehicles")</li>
                                <li>@Html.ActionLink("Detaljerad fordonsöversikt", "DetailedIndex", "Vehicles")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Om oss", "About", "Home")</li>
                        <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    </ul>
                    @*</div>*@
                @*</nav>*@
            </div>
            @*</div>*@
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now - Garage 2.5</p><br />
            <p>
                <button type="button" id="utskrift" onclick="window.print();" class="hidden-print">
                    Utskrift av sidan
                </button>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
