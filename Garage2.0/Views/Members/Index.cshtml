@model IEnumerable<Garage2._0.Models.Member>

@{
    ViewBag.Title = "Index";
}

<h2>Garagets medlemsregister</h2>

<p class="hidden-print">
    @Html.ActionLink("Registrera en ny medlem", "Create")
</p>

<div class="hidden-print">
    @using (Html.BeginForm())
    {
        <b>Sök efter:</b>
        @Html.RadioButton("Option", "Name")        <text>Medlemsnamn</text>
        @Html.RadioButton("Option", "Membershipnumber") <text>Medlemsnummer</text>
        @Html.TextBox("Search") <input type="submit" name="submit" value="Utför" style="border-radius: 10px; color:darkblue; background-color:lightyellow; border-color:darkblue;" />
    }
</div><br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membershipnumber)
            </th>
            <th class="hidden-print"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Membershipnumber)
                </td>
                <td class="hidden-print">
                    @Html.ActionLink("Ändra medlemsdata", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Avregistrera", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
